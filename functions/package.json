{
  "name": "barista-functions",
  "description": "Cloud Functions for barista",
  "version": "0.0.1",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "test": "npm run build && mocha ./test/unit/**",
    "test:cov": "istanbul cover $(npm bin)/_mocha ./test/unit/**",
    "lint": "eslint -c .eslintrc ./src",
    "build": "npm run clean && babel src -d --out-dir dist",
    "watch": "npm run build -- --watch",
    "clean": "rimraf dist etc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "npm run build && firebase functions:log",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@google-cloud/storage": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase-admin": "^5.13.1",
    "firebase-functions": "^2.0.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "googleapis": "^23.0.0",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "mkdirp-promise": "^5.0.1",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2"
  },
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "firebase-functions-test": "^0.1.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.2.0",
    "sinon": "^6.1.4"
  }
}
